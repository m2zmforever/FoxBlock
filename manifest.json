{
  "manifest_version": 3,
  "name": "Fox-Block Ad Blocker",
  "version": "1.0.0",
  "description": "Blocks ads, popups, video ads, and trackers. Supports Chrome, Edge, and Firefox.",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "storage",
    "declarativeNetRequest",
    "declarativeNetRequestWithHostAccess",
    "scripting",
    "tabs"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "service_worker.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png"
    },
    "default_title": "zmBlock Ad Blocker"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  }
}
